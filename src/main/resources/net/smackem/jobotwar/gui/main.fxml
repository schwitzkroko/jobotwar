<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane styleClass="root" stylesheets="@main.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.smackem.jobotwar.gui.MainController">
   <padding>
      <Insets bottom="4" left="4" right="4" top="4" />
   </padding>
   <left>
      <VBox spacing="4">
         <StackPane fx:id="canvasContainer">
            <Canvas fx:id="canvas" />
            <StackPane fx:id="winnerOverlay"
                       style="-fx-background-color: rgba(0,0,0,0.7)"
                       prefHeight="Infinity" prefWidth="Infinity"
                       visible="false">
               <VBox spacing="12" alignment="CENTER" style="-fx-alignment: center">
                  <Label fx:id="winnerLabel" style="-fx-font-size: 16pt" textAlignment="CENTER" />
                  <Button text="New Game" minWidth="100" onAction="#newGame" />
               </VBox>
            </StackPane>
         </StackPane>
         <HBox spacing="5.0">
         </HBox>
      </VBox>
   </left>
   <center>
      <VBox fx:id="robotGaugesParent" spacing="5.0">
         <padding>
            <Insets left="4" right="4" />
         </padding>
         <HBox alignment="CENTER" spacing="5.0">
            <Button minWidth="80" onMouseClicked="#startGame" text="Start" />
            <Button minWidth="80" onMouseClicked="#stopGame" text="Stop" />
         </HBox>
      </VBox>
   </center>
</BorderPane>
